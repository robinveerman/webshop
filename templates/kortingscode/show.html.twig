{% extends 'base2.html.twig' %}

{% block title %}Kortingscode{% endblock %}

{% block body %}
    <h1>Kortingscode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ kortingscode.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ kortingscode.naam }}</td>
            </tr>
            <tr>
                <th>Percentage</th>
                <td>{{ kortingscode.percentage }}</td>
            </tr>
            <tr>
                <th>Einddatum</th>
                <td>{{ kortingscode.einddatum ? kortingscode.einddatum|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ kortingscode.code }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('kortingscode_index') }}" class="btn btn-primary">Terug</a>
<br>
    <a class="btn btn-warning" href="{{ path('kortingscode_edit', {'id': kortingscode.id}) }}">Bewerken</a>
<br>
<br>
    {{ include('kortingscode/_delete_form.html.twig') }}
{% endblock %}
